<?xml version="1.0" encoding="utf-8"?>
<mujoco model="3D_SLIP">

    <!-- Set the angles to be in radians -->
    <compiler angle="radian" autolimits="true" eulerseq="zyx"/>

    <!-- Fix simulation options -->
    <option timestep="0.005" iterations="50" solver="Newton" gravity="0 0 -9.81"  integrator = "RK4"/>

    <size nconmax="100" njmax="500"/>

    <!-- Specify the light settings -->
    <visual>
        <headlight ambient="0.5 0.5 0.5"/>
    </visual>

    <!-- List the location of all meshes -->
    <asset>
        <texture type='skybox' builtin='gradient' width='128' height='128' rgb1='0.4 0.6 0.8' rgb2='0 0 0'/>
        <mesh file="../meshes/slip/Body.STL" name="com"/>
        <texture builtin="checker" height="512" name="plane" rgb1="0.9 0.9 0.99"
                 rgb2="0.7 0.7 0.7"
                 type="2d"
                 width="512"/>
        <material name="plane" reflectance="0.5" texrepeat="1 1" texture="plane"
                  texuniform="true"/>
    </asset>  

    <!-- Bodies -->
    <worldbody>
        
        <!-- Ground -->
        <geom material="plane" name="plane" rgba=".9 .9 .9 1" size="100 100 0.1" type="plane" euler="0 0 0"/>

        <!-- 3D SLIP Robot -->
        <body name="com" pos="0 0 1.002">
            <!-- ixx iyy izz ixy ixz iyz-->
            <inertial mass="20.0" fullinertia=" 0.045 0.045 0.045 0.0 0.0 0.0" pos="0 0 0.0" />
            <geom name="com_mesh" conaffinity="0" contype="0" density="0" group="1" mesh="com" type="mesh"/>
            <freejoint name="root"/>
        </body>

    </worldbody>

    <!-- Collisions -->
    <contact>
        <pair name="com_to_ground" geom1="com_mesh" geom2="plane"/> 
    </contact>

</mujoco>
